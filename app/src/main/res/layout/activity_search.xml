<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SearchActivity"
    android:orientation="vertical">

    <TextView
        android:text="Here you can search for particular podcasts. Ideally we could support this search by suggesting popular browsing categories below the search bar."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="15dp"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type a search keyword ..."
        android:layout_gravity="bottom"
        android:textColorHint="#FFFF4081"
        android:inputType="textCapWords"
        android:gravity="bottom"
        android:paddingTop="25sp"
        />

</LinearLayout>
