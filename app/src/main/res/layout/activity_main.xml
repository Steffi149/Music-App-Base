<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context="com.example.android.musicapp.MainActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/NowPlaying"
        style="@style/CategoryStyle"
        android:background="@color/category_nowplaying"
        android:text="@string/now_playing"
        android:layout_weight="0.5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/trending"
            style="@style/CategoryStyle"
            android:background="@color/category_trending"
            android:text="@string/trending_podcasts"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/search"
            style="@style/CategoryStyle"
            android:background="@color/category_search"
            android:text="@string/search"
            android:layout_width="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/details"
        style="@style/CategoryStyle"
        android:background="@color/category_details"
        android:text="@string/podcast_details"
        android:layout_width="match_parent"
        android:layout_gravity="right"
        android:layout_weight="1" />
</LinearLayout>
